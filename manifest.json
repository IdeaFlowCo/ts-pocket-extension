{
  "manifest_version": 3,
  "name": "TsPocket - Save to Thoughtstream",
  "version": "1.0.0",
  "description": "Save articles to Thoughtstream with a Pocket-like experience",
  "author": "Ideaflow",
  "homepage_url": "https://ideaflow.app",
  "offline_enabled": false,
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "tabs",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "https://prod-api.ideaflow.app/*",
    "https://ideaflow.auth0.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Save to TsPocket"
    }
  }
}